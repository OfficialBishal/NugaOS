#export PATH="$HOME/opt/cross/bin:$PATH"
GPPPARAMS = -ffreestanding -O2 -Wall -Wextra -fno-exceptions -fno-rtti
ASPARAMS = 
LDPARAMS = -ffreestanding -O2 -nostdlib -lgcc

objects = loader.o kernel.o

%.o: %.cpp
		i686-elf-g++ $(GPPPARAMS) -o $@ -c $<

%.o: %.s
		i686-elf-as $(ASPARAMS) -o $@ $<

mykernel.bin: linker.ld $(objects)
		i686-elf-gcc $(LDPARAMS) -T $< -o $@ $(objects)

install: mykernel.bin
		sudo cp $< /boot/mykernel.bin

mykernel.iso: mykernel.bin
		mkdir -p isodir/boot/grub
		mkdir -p isodir/boot/grub
		cp mykernel.bin isodir/boot/mykernel.bin
		cp grub.cfg isodir/boot/grub/grub.cfg
		grub-mkrescue --output=$@ isodir
		rm -rf isodir

